{
  "name": "silver",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm --filter=solar start",
    "test": "pnpm -r --parallel test",
    "bench": "PERF_UNIT=ms BENCH_GLOBALS=\"{\\\"DEBUG\\\": true}\" pnpm --filter=silver-ecs bench",
    "build": "pnpm build:lib && pnpm build:tsc",
    "build:lib": "tsx build/build.ts",
    "build:tsc": "pnpm --filter \"./libs/*\" -r exec tsc -b",
    "reset": "pnpm reset:bench & pnpm reset:dist & pnpm i",
    "reset:bench": "find ./libs -type f -name '*.bench-results' -delete",
    "reset:dist": "find ./libs -type d -name 'dist' -prune -exec rm -rf {} \\;",
    "release": "pnpm build && pnpm publish -r"
  },
  "keywords": [],
  "author": "Eric McDaniel <eric.g.mcdaniel@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.1.1",
    "esbuild": "^0.18.17",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "devDependencies": {
    "tsx": "^3.12.7"
  }
}
